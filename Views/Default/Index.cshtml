@using OgrenciNotMvc.Models.EntitiyFramework
@model List<TBLDERSLER>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h2>DERSLER</h2>
<table class="table table-bordered">
    <tr>
        <th>DERS ID</th>
        <th>DERS ADI</th>
        <th>İŞLEMLER</th>
    </tr>
    <tbody>
           @foreach (var ders in Model)
           {
               <tr>
                   <td>@ders.DERSID</td>
                   <td>@ders.DERSAD</td>
                   <td><center><a href="/Default/Sil/@ders.DERSID" class="btn btn-danger">SİL</a><a href="/Default/DersGetir/@ders.DERSID" class="btn btn-warning">DÜZENLE</a></center></td>
               </tr>
           }
    </tbody>
</table>
<center>
    <a class="btn btn-primary" href="/Default/LessonCreate">Ders Ekle</a>
</center>

